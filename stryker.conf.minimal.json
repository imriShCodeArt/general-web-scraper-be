{
  "$schema": "https://raw.githubusercontent.com/stryker-mutator/stryker-js/master/packages/core/schema/stryker-core.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/lib/csv-generator.ts"
  ],
  "jest": {
    "config": {
      "preset": "ts-jest",
      "testEnvironment": "node",
      "globals": {
        "ts-jest": {
          "tsconfig": "tsconfig.jest.json"
        }
      },
      "roots": ["<rootDir>/src"],
      "testMatch": [
        "**/__tests__/**/*.ts",
        "**/?(*.)+(spec|test).ts"
      ],
      "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
      "testTimeout": 30000,
      "verbose": false,
      "clearMocks": true,
      "restoreMocks": true
    }
  },
  "thresholds": {
    "high": 60,
    "break": 40
  },
  "timeoutMS": 30000,
  "concurrency": 1,
  "logLevel": "warn",
  "fileLogLevel": "error",
  "ignoreStatic": true,
  "ignorePatterns": [
    "**/node_modules/**",
    "**/coverage/**",
    "**/dist/**",
    "**/.stryker-tmp/**"
  ],
  "maxTestRunnerRestarts": 5,
  "testRunnerNodeArgs": ["--max-old-space-size=1024"]
}
