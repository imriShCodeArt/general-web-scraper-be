{
  "name": "general-web-scraper-be",
  "version": "2.0.0",
  "description": "Backend API for universal web scraper with deterministic CSV outputs and WooCommerce compatibility",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "vercel-build": "node vercel-build.js",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:unit": "jest --testPathPattern=src/lib/__tests__",
    "test:integration": "jest --testPathPattern=src/test/integration",
    "test:e2e": "jest --testPathPattern=src/test/e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist coverage",
    "install:all": "npm install",
    "type-check": "tsc --noEmit",
    "precommit": "npm run lint && npm run type-check && npm run test:unit"
  },
  "keywords": [
    "web-scraper",
    "ecommerce",
    "woocommerce",
    "csv",
    "universal",
    "typescript",
    "testing",
    "dependency-injection"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/commander": "^2.12.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^14.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "fast-csv": "^5.0.5",
    "helmet": "^7.2.0",
    "jsdom": "^26.1.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "puppeteer": "^24.17.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts",
      "!src/index.ts",
      "!src/server.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true
  }
}
